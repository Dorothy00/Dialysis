<?xml version="1.0" encoding="utf-8"?>
<com.reader.dialysis.view.IndicatorWrapper
    android:id="@+id/indicator_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg"
    app:drawable="@drawable/ic_spinner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding8"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/padding10"
        android:paddingTop="@dimen/padding8">

        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Example"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/textsize18"/>

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/word"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_add_word"/>

        <TextView
            android:id="@+id/pronunciation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/word"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize14"/>

        <TextView
            android:id="@+id/definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pronunciation"
            android:layout_marginTop="@dimen/margin5"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize14"/>

        <TextView
            android:id="@+id/example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/definition"
            android:layout_marginTop="@dimen/margin5"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize14"/>

    </RelativeLayout>

</com.reader.dialysis.view.IndicatorWrapper>