<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="dorothy00dd"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="dorothy00dd@gmail.com"
            android:textSize="14sp"
            android:textStyle="normal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_book"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height30"
        android:layout_marginTop="@dimen/margin5"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:background="@drawable/selector_book_library"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center_horizontal"
            android:text="我的书籍"
            android:textColor="@color/selector_drawer_item_color"
            android:textSize="@dimen/textsize16"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/words"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height30"
        android:layout_marginTop="@dimen/margin5"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:background="@drawable/selector_wordbook"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center_horizontal"
            android:text="生词本"
            android:textColor="@color/selector_drawer_item_color"
            android:textSize="@dimen/textsize16"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height30"
        android:layout_marginTop="@dimen/margin5"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:background="@drawable/selector_wordbook"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center_horizontal"
            android:text="进度"
            android:textColor="@color/selector_drawer_item_color"
            android:textSize="@dimen/textsize16"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height30"
        android:layout_marginTop="@dimen/margin5"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:background="@drawable/selector_setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center_horizontal"
            android:text="设置"
            android:textColor="@color/selector_drawer_item_color"
            android:textSize="@dimen/textsize16"/>
    </LinearLayout>


</LinearLayout>