<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/header"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginLeft="16dp"
            android:text="dorothy00dd"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize22"
            android:textStyle="bold"

            />

    </LinearLayout>


    <TextView
        android:id="@+id/all_book"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height30"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:drawableLeft="@drawable/selector_all_book"
        android:drawablePadding="@dimen/padding10"
        android:gravity="center_vertical"
        android:text="全部书籍"
        android:textColor="@color/selector_drawer_item_color"
        android:textSize="@dimen/textsize16"/>

    <TextView
        android:id="@+id/my_book"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height30"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:drawableLeft="@drawable/selector_book_library"
        android:drawablePadding="@dimen/padding10"
        android:gravity="center_vertical"
        android:text="我的书籍"
        android:textColor="@color/selector_drawer_item_color"
        android:textSize="@dimen/textsize16"/>


    <TextView
        android:id="@+id/words"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height30"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:drawableLeft="@drawable/selector_wordbook"
        android:drawablePadding="@dimen/padding10"
        android:gravity="center_vertical"
        android:text="生词本"
        android:textColor="@color/selector_drawer_item_color"
        android:textSize="@dimen/textsize16"/>


    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height30"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:drawableLeft="@drawable/selector_trending"
        android:drawablePadding="@dimen/padding10"
        android:gravity="center_vertical"
        android:text="进度"
        android:textColor="@color/selector_drawer_item_color"
        android:textSize="@dimen/textsize16"/>

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height30"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:drawableLeft="@drawable/selector_setting"
        android:drawablePadding="@dimen/padding10"
        android:gravity="center_vertical"
        android:text="设置"
        android:textColor="@color/selector_drawer_item_color"
        android:textSize="@dimen/textsize16"/>

</LinearLayout>